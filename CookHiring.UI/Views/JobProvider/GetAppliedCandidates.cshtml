@model IEnumerable<CookHiring.UI.Models.JobSeekerDTO>

@{
    ViewBag.Title = "GetAppliedCandidates";
    Layout = "~/Views/Shared/_JobProviderDashboard.cshtml";
}

<h2>Applied Candidates</h2>


<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonExp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonPhone)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonExp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonPhone)
        </td>
        @if(item.isGotJob=="true")
                {
                    <div class="alert-success"> Accepted</div>
                }
         else { 
       
        <td>
            @Html.ActionLink("Accept", "Accept", new {  id=item.JobSeekerId,jobId=item.Jobid }) |
            @Html.ActionLink("Decline", "Decline", new { id = item.JobSeekerId, jobId = item.Jobid }) |
           
        </td>}
    </tr>
}

</table>
